<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="3dp"
    android:background="@color/purple_100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />
    <TextView
        android:id="@+id/randomNumber_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randon Number:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/randomNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline" />

    <TextView
        android:id="@+id/code_and_randomNumber_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BCode &amp; RandomNo:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/randomNumber_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/code_and_randomNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/randomNumber_tv"
        app:layout_constraintStart_toEndOf="@id/guideline"/>

    <TextView
        android:id="@+id/mFactor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Multiplying Factor:"
        app:layout_constraintTop_toBottomOf="@id/code_and_randomNumber_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/mFactor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@id/code_and_randomNumber_tv"
        app:layout_constraintStart_toEndOf="@id/guideline"/>

    <TextView
        android:id="@+id/mappedNumber_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplied Result:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/mFactor_tv"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/mappedNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mFactor_tv"
        app:layout_constraintStart_toEndOf="@id/guideline" />

    <TextView
        android:id="@+id/total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum of Result:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mappedNumber_tv" />
    <TextView
        android:id="@+id/total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/mappedNumber_tv" />

    <TextView
        android:id="@+id/modulo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum % 10:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_tv" />
    <TextView
        android:id="@+id/modulo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/total_tv" />

    <TextView
        android:id="@+id/extra_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 - Modulo:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modulo_tv" />
    <TextView
        android:id="@+id/extra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/modulo_tv" />

    <TextView
        android:id="@+id/acct_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/extra_tv" />
    <TextView
        android:id="@+id/acct_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/extra_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>